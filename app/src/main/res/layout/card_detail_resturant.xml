<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative_parent"
        android:layout_height="177dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:id="@+id/resturant_type"
            android:layout_below="@+id/resturant_name"
            android:layout_alignLeft="@+id/resturant_name"
            android:layout_alignStart="@+id/resturant_name"
            android:textSize="10sp" />

        <TextView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:id="@+id/resturant_addreess"
            android:layout_below="@+id/resturant_type"
            android:layout_alignLeft="@+id/resturant_type"
            android:layout_alignStart="@+id/resturant_type"
            android:layout_marginTop="13dp"
             />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resturant_openhours"
            android:layout_below="@+id/resturant_addreess"
            android:layout_alignLeft="@+id/resturant_addreess"
            android:layout_alignStart="@+id/resturant_addreess"
            android:layout_marginTop="10dp" />


        <ImageView
            android:layout_width="110dp"
            android:layout_height="124dp"

            android:id="@+id/resturant_image"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <android.support.design.widget.TabLayout
            app:tabIndicatorColor="@color/colorPrimary"
            android:layout_below="@id/resturant_image"
            android:id="@+id/tapincard"
            app:tabIndicatorHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resturant_name"
            android:textStyle="normal|bold"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/resturant_image"
            android:layout_toEndOf="@+id/resturant_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />
        <ImageButton
            android:background="@drawable/phone_call"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
