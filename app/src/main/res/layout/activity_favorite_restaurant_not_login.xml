<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbar_not_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/facebook_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/login_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            card_view:srcCompat="@drawable/login_image" />
        <TextView
            android:layout_below="@+id/login_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_text"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#73000000"
            android:text="Login &amp; save restaurant you love!"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_text2"
            android:layout_below="@+id/login_text"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#73000000"
            android:text="They're appear here."
            android:layout_marginBottom="12dp"/>
        <android.support.v7.widget.AppCompatButton
            android:layout_below="@+id/login_text2"
            android:id="@+id/btn_not_login"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="12dp"
            android:text="Login"
            android:background="@color/colorDarkPrimary"
            android:textColor="@color/colorTextW"/>
    </RelativeLayout>
</LinearLayout>


